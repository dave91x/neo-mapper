<h2>User Account</h2>

<p>User ID: &nbsp;{{user.uid}}</p>
<br/>
<form action="/users/{{user.uid}}" method="post" enctype="application/x-www-form-urlencoded" role="form">
  
  <input type="hidden" name="uid" value="{{user.uid}}" />

  <div class="form-group">
    <label for="first_name">First Name</label>
    <input id="first_name" type="text" class="form-control" name="first_name" value="{{user.first_name}}" required />
  </div>
  
  <div class="form-group">
    <label for="email">Email</label>
    <input id="email" type="email" class="form-control" name="email" value="{{user.email}}" required />
  </div>

  <br>
  <a href="/users" class="btn">Cancel</a>
  <input type="submit" class="btn btn-primary" value="Save" />

</form>
